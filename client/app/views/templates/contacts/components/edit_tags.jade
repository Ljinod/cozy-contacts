dt.outline.secondary.caret(role="button")
    i.fa.fa-tags.fa-flip-horizontal
    = t('card actions labels')
    i.fa.fa-caret-down

dd: fieldset
    legend= t("card actions labels add")
    ul
        each tag in alltags
            - var _ref = tag._id.slice(-6)
            li: label(for="tag-#{_ref}")
                input(type="checkbox", id="tag-#{_ref}", name="tags", value=tag._id, checked=_.contains(tags, tag.name))
                span.label= tag.name
        li: button
            i.fa.fa-plus
            = t("card actions labels create")
