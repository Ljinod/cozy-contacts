avatar(size)
    @extend $content-center

    width         em(size)
    height        em(size)
    flex-shrink 0

    right-spaced  .5em
    border-radius 50%

    &.initials
        background-color grey-03
        color white


[role=application]
    @extend $app-2panes-toolbar

    // TODO: Export drawer toggling into Cozy-Ui
    @media (max-width: (1023/basefont)rem)
        toggle-width = em(44px)

        .drawer
            z-index       1
            position      absolute
            top           0
            left          0
            width         100vw
            height        100vh
            padding-right toggle-width

            &[aria-expanded=true] + main
                transform translateX("calc(100vw - %s)" % toggle-width)

        main
            z-index    2
            position   relative
            transform  translateX(0)
            transition transform 350ms ease-out


    &[aria-busy=true]::before
        position fixed
        top 10vh
        left 50vw
        margin-left -18px
        @extend $icon-spinner-grey
        @extend $icon-36


[role=contentinfo]
    dl
    dd
        reset()


.dialogs [role=dialog]
    @extend $dialog

.card
.duplicates
    [role=contentinfo]
        transition-property transform opacity
        transition-duration 300ms
        transition-timing-function ease-out
        transition-delay 80ms

        @media (max-width: (800/16)rem)
            flex-direction column
            height 90vh

    &[aria-busy=true] [role=contentinfo]
        transform translateY(30%) scale(0.95)
        transform-origin center bottom
        opacity 0.8

        transition-delay none


[role=alertdialog]
    @extend $alertdialog

    h2
        top-spaced 0

    p
        bottom-spaced em(30px)


[aria-haspopup=true]
    @extend $dropdown


[role=listbox]
    @extend $selectbox
