*
    box-sizing border-box


avatar(size)
    @extend $content-center

    width         em(size)
    height        em(size)
    flex-shrink 0

    right-spaced  .5em
    border-radius 50%

    &.initials
        background-color grey-03
        color white


[role=application]
    @extend $app-2panes-toolbar

    &[aria-busy=true]::before
        position fixed
        top 10vh
        left 50vw
        margin-left -18px
        @extend $icon-spinner-grey
        @extend $icon-36


[role=contentinfo]
    dl
    dd
        reset()


.dialogs [role=dialog]
    @extend $dialog


[role=alertdialog]
    @extend $alertdialog

    h2
        top-spaced 0

    p
        bottom-spaced em(30px)


[aria-haspopup=true]
    @extend $dropdown


[role=listbox]
    @extend $selectbox
