[role=list]
    [role=columnheader]
        padding-left 1.5em


    [role=rowgroup]
        padding 0 1em


    [role=listitem]
        display flex
        align-items center
        padding .3em 0

        & > label
            @media (max-width: (360/16)rem)
                display none

        input
            hide()


    [role=gridcell]
        flex 3
        margin 0 .5em

        &.name
            flex 4
            display flex
            align-items center

            @media (max-width: (360/16)rem)
                margin-left 0

        .initials
            flex-shrink 0

        .avatar
            avatar(40px)


    .fa-caret-down
        margin 0 .3em


    .type
        hide()
