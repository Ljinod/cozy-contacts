.drawer
    display flex
    padded  10px, 20px
    padding-right 0

    background-color grey-01
    border-right     1px solid grey-03

    @media (max-width: (360/16)rem)
        display none


    [class^=tool-]
        vertically-spaced 10px


    .tools
        flex           1
        display        flex
        flex-direction column

        legend
        button
            display    block
            width      100%

            text-align left

            font-weight bold

    .tool-actions
        padding-right em(20px)

    [role=button]
        display block
        width 100%
        bottom-spaced .5em

    .tool-labels
        vertically-spaced()
        flex 1
        overflow hidden

        fieldset
            height 100%

        legend
            color          grey-05
            font-size      14px
            text-transform uppercase

        label
            display           flex
            align-items       center
            vertically-spaced .5em
            text-transform    capitalize

        input
            hide()

        ul
            height calc(100vh - 12em)
            padding-right em(20px)
            overflow-y auto
