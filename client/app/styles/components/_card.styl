.card
    @extend $dialog

    &[aria-busy=true] [role=contentinfo]
        transform translateY(30%) scale(0.95)
        transform-origin center bottom
        opacity 0.8

        transition-delay none


    [role=contentinfo]
        display flex

        background-color white
        border-radius 4px

        transition-property transform opacity
        transition-duration 300ms
        transition-timing-function ease-out
        transition-delay 80ms


    header
        display flex
        align-items baseline

        .tags
            flex 1
            display flex
            left-spaced 2em

            li
                horizontally-spaced .25em
                padded .25em .45em
                border-radius 2px
                background-color grey-01
                font-size .85em
                text-transform capitalize
                color grey-07


    .avatar
        font-size 32px
        avatar    128px
        spaced()


    .initials
        background-color grey-02
        color            white


    .data
        flex    1
        padded 30px, 10px

        .block
            reset()
            vertically-spaced 10px

            li
                bottom-spaced 4px

                &:last-child
                    bottom-spaced 0

        .group
            display flex

        .type
            width          8em

            font-size      em(13px)
            color          grey-05
            font-style     normal
            text-transform uppercase

        .value
            reset()
            flex 1


        .block[data-type] ul:not(:empty)
        .block [data-type]:first-child ul:not(:empty)
        &.edit .block
            top-padded 10px
            border-top 1px solid grey-02


    // tags select dropdown
    .tags
        fieldset
            horizontally-spaced 1em

        li
            white-space nowrap

        button
            width auto
            min-width 100%

        label
            display flex
            align-items flex-start
            cursor pointer

            span
                flex 1


    // edition mode
    .edit
        input
            background-color transparent

        .group
            position          relative
            vertically-spaced 6px

            &:hover
                input
                    background-color grey-01

            input:focus
                background-color grey-01

            &:not(:hover) button
            input.empty + button
                hide()

            input + button
                padding                   0 .4em
                background-color          grey-01
                border-top-left-radius    0
                border-bottom-left-radius 0
                font-size                 .8em
                color                     grey-06

            input:not(.empty)
                border-top-right-radius    0
                border-bottom-right-radius 0

            .fa
                margin 0

        .type
            vertically-padded 6px
            margin-right 2px

            &:focus
                color grey-08

        .value
            horizontally-padded 8px
            border-radius       em(2px)

        textarea.value
            padded 8px


    aside
        padding em(30px)

        @media (max-width: (360/16)rem)
            display none

        li:not(:last-child)
            display block
            margin-bottom em(10px)

        button
        [role=button]
            display block
            box-sizing border-box
            width 100%
            text-align left

        .fa
            margin-right em(10px)
