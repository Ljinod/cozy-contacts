.merge

    h1
        bottom-spaced .5em
        font-size     20px

    dl
        bottom-spaced 2em

    dt
        top-spaced  .5em
        color       grey-05
        line-height 1.5em

    ul
        reset()
        list-style-type none

    li
        line-height 1.8em

    dd
        &:not(:last-child)
            bottom-padded .5em
            border-bottom 1px solid grey-02

        label
            display     flex
            align-items center
            cursor      pointer

        input
            hide()

            & + i
                flex         none
                width        1em
                height       1em
                right-spaced 8px

                border-radius 50%
                border        2px double grey-04

                background-color white

            &:checked + i
                box-shadow       inset 0 0 0 3px white
                background-color blue

        ul.avatars
            li
                display inline-block

            img.avatar
                font-size 32px
                spaced()
                avatar    128px
                border 5px solid white

            input:checked + img
                border 5px solid blue
